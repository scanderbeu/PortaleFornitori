@model PortaleFornitori.ViewModels.Utenti.UtentiCreateViewModel

@{
    /**/

    ViewBag.Title = "Create";
}

<h2>Creazione Utente</h2>

@using (Html.BeginForm("Create", "Utenti", FormMethod.Post, new { @class = "form-horizontal" }))
{
    @Html.ValidationSummary(false,"Errore")
    <div class="form-group">
        <label class="col-sm-2">Username</label>
        <div class="col-sm-10">
            @Html.EditorFor(e => e.Utente.Email)
            @Html.ValidationMessageFor(m=>m.Utente.Email, "*")
        </div>
    </div>
    <div class="form-group">
        <label class="col-sm-2">Password</label>
        <div class="col-sm-10">
            @Html.PasswordFor(e => e.Utente.Password)
            @Html.ValidationMessageFor(m => m.Utente.Password, "*")
        </div>
    </div>
    <div class="form-group">
        <label class="col-sm-2">Nome</label>
        <div class="col-sm-10">
            @Html.EditorFor(e => e.Utente.Nome)
            @Html.ValidationMessageFor(m => m.Utente.Nome, "*")
        </div>
    </div>
    <div class="form-group">
        <label class="col-sm-2">Cognome</label>
        <div class="col-sm-10">
            @Html.EditorFor(e => e.Utente.Cognome)
            @Html.ValidationMessageFor(m => m.Utente.Cognome, "*")
        </div>
    </div>
    <div class="form-group">
        <label class="col-sm-2">Ruolo</label>
        <div class="col-sm-10">
            @Html.DropDownListFor(e => e.Utente.IdRuolo,
             new SelectList(Model.Ruoli, "IdRuolo", "DescrizioneRuolo"), "Seleziona il ruolo", new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.Utente.IdRuolo, "*")
        </div>
    </div>
    <div class="form-group">
        <label class="col-sm-2">Fornitore</label>
        <div class="col-sm-10">
            @Html.DropDownListFor(e => e.Utente.IdFornitore,
             new SelectList(Model.Fornitori, "IdFornitore", "RagioneSociale"), "Nessun Fornitore", new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.Utente.IdFornitore,"*")
        </div>
    </div>

    <div class="form-group">
        <div class="col-sm-6">
            <a href="@Url.Action("Index","Utenti")">
                <span class="btn btn-danger">
                    Annulla
                </span>
            </a>
        </div>
        <div class="col-sm-6">
            <button class="btn btn-success">
                Salva
            </button>
        </div>
    </div>

}

