@model PortaleFornitori.ViewModels.Fornitori.FornitoriEditViewModel

@using (Ajax.BeginForm("Edit", "Fornitori", new AjaxOptions() { HttpMethod = "POST", OnSuccess = "EditFornitore_OnSuccess" }))
{
<div class="modal-header">
    <h3 class="modal-title">@(Model.Fornitore.IdFornitore == 0 ? "Creazione Fornitore" : "Modifica Fornitore")</h3>
</div>
<div class="modal-body">
    @Html.ValidationSummary(false,"Attenzione")
    @Html.HiddenFor(m=>m.Fornitore.IdFornitore)
    @Html.HiddenFor(m=>m.PaginaCorrente)
    <div class="form-group">
        <div class="col-sm-2">Ragione Sociale</div>
        <div class="col-sm-10">
            @Html.TextBoxFor(m => m.Fornitore.RagioneSociale, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.Fornitore.RagioneSociale, "*")
        </div>
    </div>
    <div class="form-group">
        <div class="col-sm-2">Indirizzo</div>
        <div class="col-sm-10">
            @Html.TextBoxFor(m => m.Fornitore.Indirizzo, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.Fornitore.Indirizzo, "*")
        </div>
    </div>
    <div class="form-group">
        <div class="col-sm-2">Città</div>
        <div class="col-sm-10">
            @Html.TextBoxFor(m => m.Fornitore.Citta, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.Fornitore.Citta, "*")
        </div>
    </div>
    <div class="form-group">
        <div class="col-sm-2">Telefono</div>
        <div class="col-sm-10">
            @Html.TextBoxFor(m => m.Fornitore.Telefono, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.Fornitore.Telefono, "*")
        </div>
    </div>
</div>
<div class="modal-footer">
    <div class="form-group">
        <div class="pull-left">
            <span class="btn btn-default"
                  data-dismiss="modal"
                  >Annulla</span>
        </div>
        <div class="pull-right">
            <button class="btn btn-primary">Salva</button>
        </div>
    </div>
</div>
}